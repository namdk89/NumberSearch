<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" > 
        <shape android:shape="rectangle" >
		
		    <corners android:radius="300dp" />
		
		    <gradient
		        android:angle="270"
		        android:centerColor="#2fbde0"
		        android:centerX="50%"
		        android:endColor="#2fbde0"
		        android:startColor="#2fbde0"
		        android:type="linear" />
		</shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
		
		    <corners android:radius="300dp" />
		
		    <gradient
		        android:angle="270"
		        android:centerColor="#2fbde0"
		        android:centerX="50%"
		        android:endColor="#2fbde0"
		        android:startColor="#2fbde0"
		        android:type="linear" />
		</shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="300dp" />
		    <gradient
		        android:angle="270"
		        android:centerColor="#2fe0c8"
		        android:centerX="50%"
		        android:endColor="#2fe0c8"
		        android:startColor="#2fe0c8"
		        android:type="linear" />
        </shape>
    </item>
</selector>