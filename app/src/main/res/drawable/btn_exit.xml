<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
		    <corners android:radius="300dp" />
		    <gradient
		        android:angle="270"
		        android:centerColor="#b9b9b9"
		        android:centerX="50%"
		        android:endColor="#b9b9b9"
		        android:startColor="#b9b9b9"
		        android:type="linear" />
		</shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
		    <corners android:radius="300dp" />
		    <gradient
		        android:angle="270"
		        android:centerColor="#b9b9b9"
		        android:centerX="50%"
		        android:endColor="#b9b9b9"
		        android:startColor="#b9b9b9"
		        android:type="linear" />
		</shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
		    <corners android:radius="300dp" />
		    <gradient
		        android:angle="270"
		        android:centerColor="#8d8d8d"
		        android:centerX="50%"
		        android:endColor="#8d8d8d"
		        android:startColor="#8d8d8d"
		        android:type="linear" />
		</shape>
    </item>
</selector>