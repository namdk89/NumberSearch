<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <inset android:drawable="@drawable/ic_sound_on"
		    android:insetRight="2.5dp"
		    android:insetLeft="2.5dp"
		    android:insetTop="2.5dp"
		    android:insetBottom="2.5dp" />
    </item>
    <item android:state_pressed="true" android:state_checked="false">
        <inset android:drawable="@drawable/ic_sound_off"
		    android:insetRight="2.5dp"
		    android:insetLeft="2.5dp"
		    android:insetTop="2.5dp"
		    android:insetBottom="2.5dp" />
    </item>
    <item android:state_checked="true" android:drawable="@drawable/ic_sound_on"/>
    <item android:state_checked="false" android:drawable="@drawable/ic_sound_off"/>
</selector>