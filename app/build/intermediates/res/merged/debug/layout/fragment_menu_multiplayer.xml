<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp" >

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/id_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s30dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/s15dp"
        android:layout_marginRight="@dimen/s30dp"
        android:src="@drawable/ic_challenge" />

    <com.triplesnake.view.ArialTextView
        android:id="@+id/menu_btn_quick_game"
        android:layout_width="@dimen/s200dp"
        android:layout_height="@dimen/s30dp"
        android:layout_below="@+id/id_search"
        android:layout_marginTop="@dimen/s80dp"
        android:background="@drawable/btn_quick_match"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/s15dp"
        android:text="@string/quick_match"
        android:textSize="@dimen/s20sp"
        android:singleLine="true"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/s30dp"
        android:layout_height="@dimen/s30dp"
        android:layout_alignTop="@+id/menu_btn_quick_game"
        android:layout_marginLeft="@dimen/s5dp"
        android:layout_toRightOf="@+id/menu_btn_quick_game"
        android:background="@drawable/ic_match" />

    <com.triplesnake.view.ArialTextView
        android:id="@+id/menu_btn_invite_player"
        android:layout_width="@dimen/s225dp"
        android:layout_height="@dimen/s30dp"
        android:layout_below="@+id/menu_btn_quick_game"
        android:layout_marginTop="@dimen/s15dp"
        android:background="@drawable/btn_start_match"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/s15dp"
        android:text="@string/start_match"
        android:singleLine="true"
        android:textSize="@dimen/s20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/s30dp"
        android:layout_height="@dimen/s30dp"
        android:layout_alignTop="@+id/menu_btn_invite_player"
        android:layout_marginLeft="@dimen/s5dp"
        android:layout_toRightOf="@+id/menu_btn_invite_player"
        android:background="@drawable/ic_match" />

    <com.triplesnake.view.ArialTextView
        android:id="@+id/menu_btn_see_invitation"
        android:layout_width="@dimen/s250dp"
        android:layout_height="@dimen/s30dp"
        android:layout_below="@+id/menu_btn_invite_player"
        android:layout_marginTop="@dimen/s15dp"
        android:background="@drawable/btn_check_match"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/s15dp"
        android:text="@string/check_match"
        android:textSize="@dimen/s20sp"
        android:singleLine="true"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/s30dp"
        android:layout_height="@dimen/s30dp"
        android:layout_alignTop="@+id/menu_btn_see_invitation"
        android:layout_marginLeft="@dimen/s5dp"
        android:layout_toRightOf="@+id/menu_btn_see_invitation"
        android:background="@drawable/ic_match_list" />

</RelativeLayout>